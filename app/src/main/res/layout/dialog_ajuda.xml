<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="ajudaDialog"
      type="com.kotlinstudies.tabelaperiodicainterativa.ui.dialogs.AjudaDialog" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_normal"
    android:background="@color/mainBackgroundNight">

    <include
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      layout="@layout/view_legenda_elemento"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="@dimen/margin_big"
      android:layout_marginEnd="@dimen/margin_big"
      android:id="@+id/include" />

    <include
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      layout="@layout/view_legenda_cores"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/include"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_margin="@dimen/margin_big"
      android:id="@+id/include2" />

    <Button
      android:id="@+id/btn_ok"
      android:onClick="@{() -> ajudaDialog.dismiss()}"
      android:text="@android:string/ok"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/include2"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="@dimen/margin_large"
      android:background="@drawable/ripple_background_transparent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>