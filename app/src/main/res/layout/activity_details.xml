<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="detailsActivity"
      type="com.kotlinstudies.tabelaperiodicainterativa.ui.activities.DetailsActivity" />

    <variable
      name="elementImageDrawable"
      type="android.graphics.drawable.Drawable" />

    <variable
      name="elementSeriesBgColor"
      type="Integer" />

    <variable
      name="chemicalElement"
      type="com.kotlinstudies.tabelaperiodicainterativa.models.ChemicalElement" />

    <variable
      name="chemicalElementDetails"
      type="com.kotlinstudies.tabelaperiodicainterativa.models.ChemicalElementDetails" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appbar"
      android:fitsSystemWindows="true"
      android:layout_height="280dp"
      android:layout_width="match_parent">

      <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:toolbarId="@+id/toolbar"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextColor="@color/primaryTextColorNight"
        app:expandedTitleTextColor="@color/primaryTextColorNight"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
        app:contentScrim="?attr/colorPrimary">

        <FrameLayout
          android:onClick="@{() -> detailsActivity.onElementImageClick()}"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:ignore="SpeakableTextPresentCheck">

          <ImageView
            android:id="@+id/app_bar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:src="@{elementImageDrawable}"
            tools:srcCompat="@drawable/hidrogenio"
            tools:ignore="ContentDescription" />

          <View
            android:background="@color/greyed_transparent_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </FrameLayout>

        <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          app:title="@{chemicalElement.name}"
          tools:title="Hidrogênio"
          app:layout_collapseMode="pin"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize" />
      </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
      tools:ignore="SpeakableTextPresentCheck">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
          android:id="@+id/ll_header"
          android:gravity="center_vertical"
          android:padding="@dimen/padding_normal"
          android:orientation="horizontal"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@{elementSeriesBgColor}"
          tools:background="@color/nao_metal_diatomico"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <TextView
            android:id="@+id/tv_serie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{chemicalElementDetails.series}"
            tools:text="@string/series_diatomic_nonmetal"
            android:textSize="@dimen/text_size_big"
            android:layout_weight="1"
            tools:ignore="TextContrastCheck" />

          <TextView
            android:id="@+id/tv_periodo"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/element_period(chemicalElementDetails.period)}"
            tools:text="Período: 1"
            tools:ignore="TextContrastCheck" />

          <TextView
            android:id="@+id/tv_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/element_group(chemicalElementDetails.group)}"
            tools:text="Grupo: 1"
            tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <TextView
          android:id="@+id/tv_descoberto_em"
          android:text="@{@string/discovered_in(chemicalElementDetails.yearDiscovered)}"
          tools:text="Descoberto em: 1766"
          android:layout_marginStart="@dimen/margin_normal"
          android:textSize="@dimen/text_size_small"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ll_header" />

        <TextView
          android:id="@+id/tv_estado_padrao"
          android:text="@{chemicalElementDetails.standardState}"
          tools:text="@string/standard_state_gas"
          android:layout_marginEnd="@dimen/margin_normal"
          android:textSize="@dimen/text_size_small"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/ll_header"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/label_configuracao_eletronica"
          android:text="@string/label_electronic_configuration"
          android:textSize="@dimen/text_size_big"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_big"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_descoberto_em" />

        <TextView
          android:id="@+id/tv_configuracao_eletronica"
          android:text="@{chemicalElementDetails.electronicConfiguration}"
          tools:text="1s²"
          android:textSize="@dimen/text_size_normal"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/label_configuracao_eletronica"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <FrameLayout
          android:id="@+id/fl_detalhes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_normal"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginEnd="@dimen/margin_small"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_configuracao_eletronica">

          <include
            android:id="@+id/ic_element_details"
            layout="@layout/view_element_details"
            app:chemicalElementDetails="@{chemicalElementDetails}" />
        </FrameLayout>

        <FrameLayout
          android:id="@+id/fl_div"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_large"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/fl_detalhes">

          <include layout="@layout/div_horizontal" />
        </FrameLayout>

        <TextView
          android:id="@+id/label_descricao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_large"
          android:layout_marginTop="@dimen/margin_big"
          android:layout_marginStart="@dimen/margin_big"
          android:text="@string/label_element_description"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/fl_div" />

        <TextView
          android:id="@+id/tv_descricao"
          android:text="@{chemicalElementDetails.description}"
          tools:text="@string/hydrogen_desc"
          android:textSize="@dimen/text_size_big"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_normal"
          android:layout_marginStart="@dimen/margin_big"
          android:layout_marginEnd="@dimen/margin_big"
          app:layout_constraintTop_toBottomOf="@+id/label_descricao"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>